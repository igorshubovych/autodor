:javascript
	$(function() {
		initMarkerList();
		
		$("input:checkbox").click(function() {
			$(this).toggleClass('checked');
		});

		updateSearchInputs();

		$("#searchQuery").keydown(function(evt) {
			if (evt.keyCode == 13) {
				$("#searchControl").click();
			}
		});
		
		$(".markerItem input.searchQuery").attr("title", $(".translations #markerItem").html());
		$(".markerItem a").attr("title", $(".translations #markerRemove").html());
		$("#searchQuery").attr("title", $(".translations #searchQuery").html());
		$("#clearRoute").attr("title", $(".translations #clearRoute").html());
		$(".lang").attr("title", $(".translations #langChanger").html());
		
		$("[title]").mbTooltip({ // also $([domElement]).mbTooltip  >>  in this case only children element are involved
			opacity: .97,       //opacity
			wait: 200,           //before show
			cssClass: "default",  // default = default
			timePerWord: 70,      //time to show in milliseconds per word
			hasArrow: false,			// if you whant a little arrow on the corner
			hasShadow: true,
			imgPath: "public/images/tooltip/",
			ancor: "mouse", //"parent"  you can ancor the tooltip to the mouse position or at the bottom of the element
			shadowColor: "black", //the color of the shadow
			mb_fade: 200 //the time to fade-in
		});
	});

.logo
	%a{ :href => "/", :title => "Euro 2012 Ukraine-Poland" }
		= image_tag "euro2012-logo.jpg", :alt => "Euro 2012 Ukraine-Poland"

.menu
	%ul
		%li.objects
			%ul
				%li
					= image_tag '/images/objects/gas.gif', { :id => "gas", :title => "#{t('objects.gas')}", :onClick => "switchLayer('gas'); $(this).toggleClass('checked');" }

				%li
					= image_tag '/images/objects/car_service.gif', { :id => "carService", :onClick => "switchLayer('carService'); $(this).toggleClass('checked');", :title => "#{t('objects.carService')}" }

				%li
					= image_tag '/images/objects/hotel.gif', { :id => "hotel", :onClick => "switchLayer('hotel'); $(this).toggleClass('checked');", :title => "#{t('objects.hotel')}" }

				%li
					= image_tag '/images/objects/monument.gif', { :id => "monument", :onClick => "switchLayer('monument'); $(this).toggleClass('checked');", :title => "#{t('objects.monument')}" }

				%li
					= image_tag '/images/objects/incidents.gif', { :id => "roadCondition", :onClick => "switchLayer('roadCondition'); $(this).toggleClass('checked');", :title => "#{t('objects.roadCondition')}" }

				%li
					= image_tag '/images/controls/weather.png', { :id => "weather", :onClick => "switchLayer('weather'); $(this).toggleClass('checked');", :title => "#{t('objects.weather')}" }

				%li
					= image_tag '/images/objects/camera.png', { :id => "webCams", :onclick => "switchLayer('webCams'); $(this).toggleClass('checked');", :title => "#{t('objects.webCam')}" }

		%li.search
			%input#searchQuery{ :type => "edit", :name => "query", :size => "30" }
			%input#searchControl{ :type => "button", :value => "#{t('panel.search')}", :onClick => "geoSearch();" }

		%li.lang
			= image_tag "flags/#{ I18n.locale }.png", { :style => "margin-right: 5px;", :curr_lang => I18n.locale }

			%ul
				-I18n::available_locales.each do |l|
					-if I18n.locale != l
						%li
							%a{ :href => "?locale=#{ l }" }
								=image_tag "flags/#{ l }.png"

.content
	.panel
		%a#clearRoute{ :name => "clearRoute", :style => "cursor: pointer; float: right;", :onClick => "clearRoute();" }
			= image_tag "controls/clear.png"
			
		%a#printRoute{ :name => "printRoute", :style => "cursor: pointer; float: right;", :onClick => "printRoute();" }
			= image_tag "controls/print_icon.png"
			
		.markerList
		
		%br/
			
		.searchResults#routingPanel

	.map
		#map

	.translations{ :style => "display: none;" }
		#add_point
			= t "panel.add_point"

		#add_start_point
			= t "panel.add_start_point"

		#add_end_point
			= t "panel.add_end_point"

		#title_unknown
			= t "place.unknown"
			
		#markerItem
			= (t "controls.markerItem").html_safe
			
		#markerRemove
			= (t "controls.markerRemove").html_safe
		
		#searchQuery
			= (t "controls.searchQuery").html_safe
		
		#clearRoute
			= (t "controls.clearRoute").html_safe
		
		#langChanger
			= (t "controls.langChanger").html_safe
