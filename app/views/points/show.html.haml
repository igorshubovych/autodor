:javascript
	$(function() {
		var point = new CM.LatLng(#{@point.lat}, #{@point.lon});
		var marker = new CM.Marker(point, { title: '#{@point.name}' });
		marker.bindInfoWindow('<h3>#{@point.name}</h3>');
		map.addOverlay(marker);
	});

%p{ :id => "notice" }
	= notice

%p
	%strong= t('admin.objectType')
	= @point.object_type

%p
	%strong= t('admin.name')
	= @point.name.html_safe


%p
	%strong= t('admin.description')
	= @point.description.html_safe

%p
	%strong= t('admin.lat')
	= @point.lat

%p
	%strong= t('admin.lon')
	= @point.lon 

%p
	%strong= t('admin.image')
	- if not @point.image.blank?
		= image_tag @point.image

= link_to t('admin.edit'), edit_point_path(@point)
|
= link_to t('admin.back'), points_path 
