<h1>Listing points</h1>

<table>
  <tr>
    <th>Object type</th>
    <th>Name</th>
    <th>Description</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.object_type %></td>
    <td><%= point.name %></td>
    <td><%= point.description %></td>
    <td><%= point.lat %></td>
    <td><%= point.lon %></td>
    <td><%= point.image %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

